<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="850.0" maxWidth="600.0" prefHeight="850.0" prefWidth="600.0" styleClass="background" stylesheets="@../css/login.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.itcelaya.cosmosexplorerdemo.controllers.LoginController">
   <VBox alignment="CENTER">
      <children>
         <VBox alignment="CENTER" maxHeight="450.0" minHeight="450.0" styleClass="container" VBox.vgrow="ALWAYS">
            <children>
               <ImageView fx:id="imageviewAPI" fitHeight="450.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true" />
            </children>
            <VBox.margin>
               <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
            </VBox.margin>
            <padding>
               <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
            </padding>
         </VBox>
         <VBox maxHeight="130.0" minHeight="130.0">
            <children>
                   <Label alignment="CENTER" graphicTextGap="8.0" maxHeight="85.0" maxWidth="1.7976931348623157E308" styleClass="title" text="Log in" textAlignment="CENTER">
                  <VBox.margin>
                     <Insets />
                  </VBox.margin>
               </Label>
               <Label fx:id="messageLabel" alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="message" text="Enter your user name and password:" wrapText="true" />
            </children>
            <VBox.margin>
               <Insets />
            </VBox.margin>
         </VBox>
      </children>
      <VBox.margin>
         <Insets />
      </VBox.margin>
   </VBox>
   <VBox fx:id="vbContainer" />
       <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
           <Button onAction="#onSendClick" styleClass="btn-success" text="Log In" />
      <VBox.margin>
         <Insets bottom="24.0" top="8.0" />
      </VBox.margin>
       </HBox>
</VBox>
