                  </StackPane>
                  <HBox>
                     <children>
                        <HBox alignment="CENTER" maxHeight="50.0" minHeight="50.0" spacing="32.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#beforeImage">
                                 <graphic>
                                    <FontIcon iconColor="WHITE" iconLiteral="far-arrow-alt-circle-left" />
                                 </graphic>
                              </Button>
                              <Button layoutX="255.0" layoutY="10.0" mnemonicParsing="false" onAction="#playBtn">
                                 <graphic>
                                    <FontIcon fx:id="playStopIBtncon" iconColor="WHITE" iconLiteral="far-pause-circle" />
                                 </graphic>
                              </Button>
                              <Button layoutX="298.0" layoutY="10.0" mnemonicParsing="false" onAction="#nextImage">
                                 <graphic>
                                    <FontIcon iconColor="WHITE" iconLiteral="far-arrow-alt-circle-right" />
                                 </graphic>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <HBox HBox.hgrow="ALWAYS">
                           <children>
                              <Label fx:id="description" styleClass="h2" text="Label" textAlignment="JUSTIFY" wrapText="true">
                                 <padding>
                                    <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                                 </padding>
                              </Label>
                           </children>
                        </HBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <MenuBar>
                    <menus>
                      <Menu mnemonicParsing="false" text="File">
                        <items>
                          <MenuItem mnemonicParsing="false" text="PDF" />
                        </items>
                      </Menu>
                      <Menu mnemonicParsing="false" text="Edit">
                        <items>
                          <MenuItem mnemonicParsing="false" onAction="#deleteSelected" text="Delete selection" />
                        </items>
                      </Menu>
                    </menus>
                  </MenuBar>
                  <Label styleClass="h3" text="Favorites:" />
                  <ListView fx:id="favoritesImagesTableview" minWidth="250.0" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            </children>
        </HBox>
        <VBox spacing="4.0" styleClass="itemContainer" VBox.vgrow="ALWAYS">
            <children>
            <Label fx:id="date" maxWidth="1.7976931348623157E308" styleClass="h2" text="Label" />
            <Hyperlink fx:id="hyperLink" styleClass="h2" text="Hyperlink" />
                <Label layoutX="10.0" layoutY="104.0" styleClass="h3" text="Cambiar API" textAlignment="JUSTIFY" wrapText="true">
                    <graphic>
                        <FontIcon iconLiteral="far-arrow-alt-circle-left" />
                    </graphic>
                </Label>
            </children>
