            <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </HBox.margin>
               <children>
                  <Label fx:id="titleImage" layoutX="10.0" layoutY="280.0" styleClass="h1" text="Space Shedule SpaceX 8376# Pic" />
                  <StackPane alignment="TOP_RIGHT" maxHeight="300.0" maxWidth="500.0" minHeight="300.0" minWidth="500.0" VBox.vgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER" maxHeight="300.0" maxWidth="500.0" styleClass="imageContainer">
                           <children>
                                  <ImageView fx:id="imageviewAPI" fitHeight="290.0" fitWidth="490.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <VBox alignment="TOP_RIGHT">
                           <children>
                              <VBox alignment="TOP_RIGHT" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
