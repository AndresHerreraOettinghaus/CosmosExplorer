<VBox alignment="CENTER" spacing="8.0" styleClass="imageContainer" stylesheets="@../css/stylesheet.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.itcelaya.cosmosexplorerdemo.controllers.mainViewController">
    <children>
          <Label styleClass="h1_White" text="SpaceX REST API" textAlignment="JUSTIFY" wrapText="true" />
        <HBox alignment="CENTER" prefHeight="628.0" prefWidth="801.0" styleClass="itemContainer" VBox.vgrow="ALWAYS">
